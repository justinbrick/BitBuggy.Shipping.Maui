<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BitBuggy.Shipping.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BitBuggy.Shipping.Maui"
    xmlns:views="clr-namespace:BitBuggy.Shipping.Maui.Views"
    Title="BitBuggy.Shipping.Maui"
    x:DataType="Shell"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="home" />

        <ShellContent
            Title="Account"
            ContentTemplate="{DataTemplate views:AccountPage}"
            Route="account" />

        <ShellContent
            Title="Customer"
            ContentTemplate="{DataTemplate views:CustomerPage}"
            Route="customer" />

        <ShellContent
            Title="Employee"
            ContentTemplate="{DataTemplate views:EmployeeView}"
            Route="employee" />
    </FlyoutItem>
</Shell>
