<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BitBuggy.Shipping.Maui.Views.CustomerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BitBuggy.Shipping.Maui.ViewModels"
    Title="CustomerPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="BorderColor" Value="{StaticResource BitGoldLight}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="BackgroundColor" Value="{StaticResource BitGreenDark}" />
                <Setter Property="WidthRequest" Value="500" />
            </Style>
            <viewmodels:ShipmentStatusViewModel x:Key="CurrentStatusModel" x:Name="CurrentStatus" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <StackLayout
            Padding="30,0"
            Orientation="Vertical"
            Spacing="25">
            <Image
                Margin="30"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                Source="bit_buggy_image.png"
                WidthRequest="250" />

            <Label
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="Shipment Tracking Interface"
                TextColor="{StaticResource BitGoldLight}"
                VerticalOptions="End" />

            <FlexLayout FlowDirection="LeftToRight" Direction="Column" Wrap="Wrap">
                <!--  Order Status  -->
                <Frame Style="{StaticResource FrameStyle}">
                    <StackLayout Orientation="Vertical">

                        <Label
                            Margin="0,10,0,0"
                            FontSize="Title"
                            HorizontalOptions="Center"
                            Text="Item # And Name"
                            TextColor="{StaticResource BitGoldLight}" />

                        <StackLayout Orientation="Horizontal">
                            <ImageButton
                                Margin="40"
                                BackgroundColor="{StaticResource BitGreenLight}"
                                BorderColor="{StaticResource BitGoldLight}"
                                BorderWidth="2"
                                HeightRequest="300"
                                HorizontalOptions="Start"
                                MaximumHeightRequest="300"
                                MaximumWidthRequest="200"
                                MinimumHeightRequest="150"
                                MinimumWidthRequest="100"
                                Source="productimagehuge.png"
                                VerticalOptions="Center"
                                WidthRequest="200" />

                            <VerticalStackLayout Margin="0,100,0,0" VerticalOptions="Start">
                                <HorizontalStackLayout HorizontalOptions="Start">
                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />

                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is being Processed"
                                        TextColor="{StaticResource BitGoldLight}" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is being Shipped to our Warehouse in "
                                        TextColor="{StaticResource BitGoldLight}" />
                                    <Label
                                        Margin="5,0,0,0"
                                        FontAttributes="Bold"
                                        Text="North Carolina"
                                        TextColor="{StaticResource BitGoldLight}" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is out for Delivery"
                                        TextColor="{StaticResource BitGoldLight}" />


                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is Deliverered"
                                        TextColor="{StaticResource BitGoldLight}" />

                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>


                <!--  Customer Orders  -->
                <StackLayout Orientation="Vertical" />
                <Frame />
            </FlexLayout>

        </StackLayout>
        <StackLayout Orientation="Vertical">


            <StackLayout Orientation="Vertical" Background="{StaticResource BitGreenLight}" HeightRequest="300">
                <Image
                     Aspect="AspectFit"
                    HeightRequest="250"
                    MaximumHeightRequest="250"
                    MaximumWidthRequest="250"
                    MinimumHeightRequest="150"
                    MinimumWidthRequest="150"
                    Source="bit_buggy_image.png"
                    WidthRequest="250"
                    />



                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="Shipment Tracking Interface"
                    TextColor="{StaticResource BitGoldLight}"
                    VerticalOptions="End" />




            </StackLayout>




        
        <!--  Borders with green background  -->

            <StackLayout Orientation="Horizontal" >
   
               

        
        <!--  Left border  -->

                <Frame BackgroundColor="{StaticResource BitGreenLight}">
                    <StackLayout BackgroundColor="{StaticResource BitGreenDark}">
                        <HorizontalStackLayout HorizontalOptions="Start">

                            <VerticalStackLayout Margin="0,10,0,0" VerticalOptions="Start">

                                <Label
                                    Margin="0,10,0,0"
                                    FontSize="Title"
                                    HorizontalOptions="Center"
                                    Text="Item # And Name"
                                    TextColor="{StaticResource BitGoldLight}" />

                                <ImageButton
                                    Margin="40"
                                    BackgroundColor="{StaticResource BitGreenDark}"
                                    BorderColor="{StaticResource BitGoldLight}"
                                    BorderWidth="2"
                                    HeightRequest="300"
                                    HorizontalOptions="Start"
                                    MaximumHeightRequest="300"
                                    MaximumWidthRequest="200"
                                    MinimumHeightRequest="150"
                                    MinimumWidthRequest="100"
                                    Source="productimagehuge.png"
                                    VerticalOptions="Center"
                                    WidthRequest="200" />


                            </VerticalStackLayout>


                            <StackLayout Orientation="Vertical" Margin="0,100,0,0" VerticalOptions="Start">

                                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is being Processed"
                                        TextColor="{StaticResource BitGoldLight}" />

                                </StackLayout>

                                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is being SHipped to our Warehouse in "
                                        TextColor="{StaticResource BitGoldLight}" />
                                    <Label
                                        Margin="5,0,0,0"
                                        FontAttributes="Bold"
                                        Text="North Carolina"
                                        TextColor="{StaticResource BitGoldLight}" />

                                </StackLayout>

                                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is out for Delivery"
                                        TextColor="{StaticResource BitGoldLight}" />


                                </StackLayout>

                                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="{StaticResource BitGreenDark}"
                                        BorderColor="{StaticResource BitGoldLight}"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is Deliverered"
                                        TextColor="{StaticResource BitGoldLight}" />

                                </StackLayout>




                            </StackLayout>

                        </HorizontalStackLayout>









        
        <!--  Your content here  -->
        
                    </StackLayout>
                </Frame>





        
        <!--  Right border  -->

                <Frame BackgroundColor="{StaticResource BitGreenLight}" WidthRequest="1097">
                    <FlexLayout Direction="Column" FlowDirection="LeftToRight" BackgroundColor="{StaticResource BitGreenDark}">

                        <StackLayout Orientation="Vertical">

                            <Label
                                FontSize="Title"
                                HorizontalTextAlignment="Center"
                                Text="Customer Name"
                                TextColor="{StaticResource BitGoldLight}" />

                            <Line BackgroundColor="{StaticResource BitGoldLight}" StrokeLineCap="Flat" IsVisible="true" StrokeThickness="3" WidthRequest="3"/>
        

                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                                <ImageButton
                                    Margin="0,100,40,0"
                                    BackgroundColor="{StaticResource BitGreenDark}"
                                    BorderColor="{StaticResource BitGoldLight}"
                                    BorderWidth="2"
                                    HorizontalOptions="Center"
                                    MaximumHeightRequest="90"
                                    MaximumWidthRequest="90"
                                    MinimumHeightRequest="90"
                                    MinimumWidthRequest="90"
                                    Source="productimagehuge.png"
                                    VerticalOptions="Start" />
                                <Label
                                    Margin="0,100,400,0"
                                    FontSize="Medium"
                                    HorizontalOptions="Start"
                                    Text="Item One"
                                    TextColor="{StaticResource BitGoldLight}" />




                            </StackLayout>

                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                                <ImageButton
                                    Margin="0,10,40,0"
                                    BackgroundColor="{StaticResource BitGreenDark}"
                                    BorderColor="{StaticResource BitGoldLight}"
                                    BorderWidth="2"
                                    HorizontalOptions="Center"
                                    MaximumHeightRequest="90"
                                    MaximumWidthRequest="90"
                                    MinimumHeightRequest="90"
                                    MinimumWidthRequest="90"
                                    Source="productimagehuge.png"
                                    VerticalOptions="Start" />
                                <Label
                                    Margin="0,10,400,0"
                                    FontSize="Medium"
                                    HorizontalOptions="Start"
                                    Text="Item Two"
                                    TextColor="{StaticResource BitGoldLight}" />




                            </StackLayout>


                        </StackLayout>

        
        <!--  Your content here  -->
        
                    </FlexLayout>
                </Frame>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>