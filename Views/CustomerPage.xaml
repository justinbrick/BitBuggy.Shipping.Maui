<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BitBuggy.Shipping.Maui.Views.CustomerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BitBuggy.Shipping.Maui.ViewModels"
    Title="CustomerPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="BorderColor" Value="{StaticResource BitGoldLight}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="BackgroundColor" Value="{StaticResource BitGreenDark}" />
                <Setter Property="WidthRequest" Value="500" />
            </Style>
            <viewmodels:ShipmentStatusViewModel x:Key="CurrentStatusModel" x:Name="CurrentStatus" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <StackLayout
            Padding="30,0"
            Orientation="Vertical"
            Spacing="25">
            <Image
                Margin="30"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                Source="bit_buggy_image.png"
                WidthRequest="250" />

            <Label
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="Shipment Tracking Interface"
                TextColor="{StaticResource BitGoldLight}"
                VerticalOptions="End" />

            <FlexLayout FlowDirection="LeftToRight" Wrap="Wrap">
                <!--  Order Status  -->
                <Frame Style="{StaticResource FrameStyle}">
                    <StackLayout Orientation="Vertical">

                        <Label
                            Margin="0,10,0,0"
                            FontSize="Title"
                            HorizontalOptions="Center"
                            Text="Item # And Name"
                            TextColor="{StaticResource BitGoldLight}" />

                        <StackLayout Orientation="Horizontal">
                            <ImageButton
                                Margin="40"
                                BackgroundColor="{StaticResource BitGreenLight}"
                                BorderColor="{StaticResource BitGoldLight}"
                                BorderWidth="2"
                                HeightRequest="300"
                                HorizontalOptions="Start"
                                MaximumHeightRequest="300"
                                MaximumWidthRequest="200"
                                MinimumHeightRequest="150"
                                MinimumWidthRequest="100"
                                Source="productimagehuge.png"
                                VerticalOptions="Center"
                                WidthRequest="200" />

                            <VerticalStackLayout Margin="0,100,0,0" VerticalOptions="Start">
                                <HorizontalStackLayout HorizontalOptions="Start">
                                    <Button
                                        Margin="0,0,0,10"
                                        Background="#06543c"
                                        BorderColor="#ad8d49"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />

                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is being Processed"
                                        TextColor="#ad8d49" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="#06543c"
                                        BorderColor="#ad8d49"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is being Shipped to our Warehouse in "
                                        TextColor="#ad8d49" />
                                    <Label
                                        Margin="5,0,0,0"
                                        FontAttributes="Bold"
                                        Text="North Carolina"
                                        TextColor="#ad8d49" />

                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="#06543c"
                                        BorderColor="#ad8d49"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is out for Delivery"
                                        TextColor="#ad8d49" />


                                </HorizontalStackLayout>

                                <HorizontalStackLayout HorizontalOptions="Start">

                                    <Button
                                        Margin="0,0,0,10"
                                        Background="#06543c"
                                        BorderColor="#ad8d49"
                                        BorderWidth="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                                    <Label
                                        Margin="10,0,0,0"
                                        FontAttributes="Bold"
                                        Text="Your Item is Deliverered"
                                        TextColor="#ad8d49" />

                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>


                <!--  Customer Orders  -->
                <StackLayout Orientation="Vertical" />
                <Frame />
            </FlexLayout>

        </StackLayout>
