<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="BitBuggy.Shipping.Maui.Views.DeliveryDetailView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:BitBuggy.Shipping.Maui.Shipping.Model"
    x:DataType="model:Delivery">
    <StackLayout Orientation="Vertical">
        <Label HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Delivery created at " />
                    <Span Text="{Binding CreatedAt}" />
                    <Span Text=", ID: " />
                    <Span Text="{Binding DeliveryId}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

    </StackLayout>
</ContentView>
