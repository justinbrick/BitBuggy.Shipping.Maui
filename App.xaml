<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BitBuggy.Shipping.Maui.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:BitBuggy.Shipping.Maui.Converters"
    xmlns:local="clr-namespace:BitBuggy.Shipping.Maui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:NullToBoolConverter x:Key="NullBoolConverter" />
            <converters:NullToBoolConverter x:Key="InvertedNullBoolConverter" Invert="True" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
